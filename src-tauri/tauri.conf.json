{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "AMP Report Builder",
  "version": "0.1.0",
  "identifier": "com.ampreports.builder",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "security": { "csp": null },
    "windows": [
      {
        "label": "main",
        "title": "AMP Report Builder",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "category": "Productivity",
    "icon": [],
    "targets": "all",
    "windows": {
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {
    "fs": {}
  }
}